<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.menuka.harrypotter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".houses.HousesActivity"
            android:label="@string/title_activity_houses"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.menuka.harrypotter.MainActivity" />
        </activity>
        <activity
            android:name=".students.StudentsActivity"
            android:label="@string/title_activity_students"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.menuka.harrypotter.MainActivity" />
        </activity>
        <activity
            android:name=".professors.ProfessorsActivity"
            android:label="@string/title_activity_professors"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.menuka.harrypotter.MainActivity" />
        </activity>
        <activity
            android:name=".subjects.SubjectsActivity"
            android:label="@string/title_activity_subjects"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.menuka.harrypotter.MainActivity" />
        </activity>
        <activity
            android:name=".magical_creatures.MagicalCreaturesActivity"
            android:label="@string/title_activity_magical_creatures"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.menuka.harrypotter.MainActivity" />
        </activity>
    </application>

</manifest>